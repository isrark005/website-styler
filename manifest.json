{
  "name": "Real time style editor",
  "description": "Style any website as per your preference",
  "version": "0.0.1",
  "permissions": ["scripting", "activeTab"],
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "logo.png"
    }
  }
}
